<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_container"
        tools:context=".PostJobActivity">



    <View
            android:background="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/view3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/view3"
            android:id="@+id/constraintLayout">

        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/white_cross"
                android:id="@+id/imageView3"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"/>
        <Button
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:id="@+id/go_back_privacy"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@null"
                app:layout_constraintStart_toStartOf="parent"
        />

        <TextView
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/colorAccent"
                android:text="Post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:textSize="24dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal"
                    android:textAlignment="center"
                    android:text="Bellow enter job informations"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView18" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView17"/>
            <TextView
                    android:text="Details of the Job"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView17"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="24dp" android:layout_marginRight="24dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp" app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/recyclerView_post"/>
            <TextView
                    android:textSize="24dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal"
                    android:textAlignment="center"
                    android:text="This is your job photo. Make sure it's a good!!"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView13" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView12"/>
            <TextView
                    android:text="What are you posting?"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12" android:layout_marginTop="10dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="24dp" android:layout_marginRight="24dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"/>
            <View
                    android:background="@drawable/border_shadow"
                    android:layout_width="0dp"
                    android:id="@+id/view11" android:layout_height="220dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView13" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintEnd_toEndOf="@+id/view11"
                    app:layout_constraintStart_toStartOf="@+id/view11" app:layout_constraintTop_toTopOf="@+id/view11"
                    app:layout_constraintBottom_toBottomOf="@+id/view11" android:id="@+id/constraintLayout2">

                <View
                        android:background="@color/colorAccent"
                        android:layout_width="0dp"
                        android:id="@+id/view13" android:layout_height="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="5dp" android:layout_marginRight="5dp" android:layout_marginTop="5dp"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="5dp"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/view12"
                        app:layout_constraintHorizontal_bias="0.5"/>
                <TextView
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:text="Take a Photo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView16"
                        android:layout_marginTop="4dp"
                        app:layout_constraintTop_toBottomOf="@+id/imageView21" android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp"
                        app:layout_constraintStart_toEndOf="@+id/view14" android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.0"/>
                <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp" app:srcCompat="@drawable/gray_camera"
                        android:id="@+id/imageView21"
                        app:layout_constraintTop_toBottomOf="@+id/view13"
                        app:layout_constraintBottom_toTopOf="@+id/view13" app:layout_constraintVertical_bias="0.552"
                        app:layout_constraintStart_toEndOf="@+id/view14" android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                        app:layout_constraintHorizontal_bias="0.342"/>
                <View
                        android:background="@color/colorPrimaryDark"
                        android:layout_width="0dp"
                        android:id="@+id/view12" android:layout_height="0dp"
                        android:layout_marginTop="5dp"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="5dp" android:layout_marginStart="5dp"
                        android:layout_marginBottom="5dp" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/view13"/>
                <View
                        android:background="@drawable/white_circle"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:id="@+id/view14"
                        app:layout_constraintTop_toBottomOf="@+id/view13"
                        app:layout_constraintBottom_toTopOf="@+id/view13"
                        app:layout_constraintStart_toEndOf="@+id/view12" app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/view13"/>
                <View
                        android:background="@drawable/gray_circle"
                        android:id="@+id/view15" android:layout_width="85dp"
                        android:layout_height="85dp"
                        app:layout_constraintTop_toTopOf="@+id/view14"
                        app:layout_constraintBottom_toBottomOf="@+id/view14"
                        app:layout_constraintStart_toStartOf="@+id/view14"
                        app:layout_constraintVertical_bias="0.475" app:layout_constraintEnd_toEndOf="@+id/view14"/>
                <TextView
                        android:textColor="@color/colorAccent"
                        android:textSize="25dp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="OR"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:id="@+id/textView14"
                        app:layout_constraintTop_toTopOf="@+id/view15"
                        app:layout_constraintBottom_toBottomOf="@+id/view15"
                        app:layout_constraintEnd_toEndOf="@+id/view15"
                        app:layout_constraintStart_toStartOf="@+id/view15"/>
                <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp" app:srcCompat="@drawable/gallery_white"
                        android:id="@+id/imageView20"
                        app:layout_constraintTop_toBottomOf="@+id/view12"
                        app:layout_constraintBottom_toTopOf="@+id/view12" app:layout_constraintVertical_bias="0.563"
                        app:layout_constraintEnd_toStartOf="@+id/view14" android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="@+id/view12"
                        android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                        app:layout_constraintHorizontal_bias="0.581"/>
                <TextView
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        android:text="Upload Photo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView15" app:layout_constraintEnd_toStartOf="@+id/view14"
                        android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/imageView20"
                        app:layout_constraintHorizontal_bias="0.0"
                />
                <Button
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:id="@+id/take_photo"
                        app:layout_constraintTop_toTopOf="@+id/view13" app:layout_constraintEnd_toEndOf="@+id/view13"
                        app:layout_constraintBottom_toBottomOf="@+id/view13"
                        app:layout_constraintStart_toEndOf="@+id/view14"
                        android:background="@null"/>
                <Button
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:id="@+id/upload_photo"
                        android:background="@null"
                        app:layout_constraintEnd_toStartOf="@+id/view14"
                        app:layout_constraintTop_toTopOf="@+id/view12"
                        app:layout_constraintStart_toStartOf="@+id/view12"
                        app:layout_constraintBottom_toBottomOf="@+id/view12"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                    android:id="@+id/recyclerView_post">
            </androidx.recyclerview.widget.RecyclerView>
            <EditText
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:background="@drawable/border_shadow"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/job_name_post"
                    android:hint="  Job Name*" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView18" android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp"/>
            <EditText
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:background="@drawable/border_shadow"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/job_address_post"
                    android:hint="  Job Address*" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/job_name_post" android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp"/>
            <EditText
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:background="@drawable/border_shadow"
                    android:gravity="top"
                    android:layout_height="226dp"
                    android:inputType="textCapSentences|textNoSuggestions|textMultiLine"
                    android:ems="10"
                    android:id="@+id/job_description_post"
                    android:layout_width="0dp"
                    android:hint="  Job Description"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/job_address_post" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"/>
            <Button
                    android:text="Submit"
                    android:background="@drawable/rounded_button"
                    android:layout_width="0dp"
                    android:textStyle="normal"
                    android:textColor="@color/colorAccent"
                    android:layout_height="50dp"
                    android:textSize="18dp"
                    android:id="@+id/submit_poatjob"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/job_description_post" android:layout_marginLeft="32dp"
                    android:layout_marginStart="32dp" android:layout_marginEnd="32dp"
                    android:layout_marginRight="32dp" android:layout_marginBottom="24dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="1.0"/>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>